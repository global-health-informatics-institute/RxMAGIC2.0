<%= form_for :pmap_inventory, :url => "/pmap_inventories"  do |f| %>
    <div class="card">
        <h5 class="card-header bg-dark text-light">Add New PMAP Inventory Item</h5>
        <div class="card-body">
            <div class="form-group row">
                <label for="itemName" class="col-md-10 col-form-label">Item Name</label>
                <div class="col-md-11">
                    <input type="text" class="form-control" id="itemName"  placeholder="Enter Item Name" autocomplete="off" name="pmap_inventory[name]" value="<%= (@drug || '')%>" required>
                </div>
            </div>
            <div class="form-group row">
                <label for="itemManufacturer" class="col-md-10 col-form-label">Manufacturer</label>
                <div class="col-md-11">
                    <select class="selectpicker form-control" id="itemManufacturer" placeholder="Select Item Manufacturer" name="pmap_inventory[mfn_id]" required>
                        <% (@mfns || []).each do |mfn| %>
                            <option value="<%= mfn.mfn_id %>" <%= (@mfn || '') == mfn.name ? 'Selected' : ''%>><%= mfn.name %></option>
                        <% end %>
                    </select>
                </div>
            </div>
            <div class="form-group row">
                <label for="itemLotNumber" class="col-md-10 col-form-label">Lot Number</label>
                <div class="col-md-11">
                    <input type="text" class="form-control" id="itemLotNumber" placeholder="Enter Item Lot Number" name="pmap_inventory[lot_number]" required>
                </div>
            </div>
            <div class="form-group row">
                <label for="itemExpiryDate" class="col-md-10 col-form-label">Expiry Date</label>
                <div class="col-md-11">
                    <input type="date" class="form-control" id="itemExpiryDate" placeholder="Enter Item Expiry Date" name="pmap_inventory[expiration_date]" min="<%= Date.today.strftime('%Y-%m-%d') %>" required>
                </div>
            </div>
            <div class="form-group row">
                <label for="itemReceivedQn" class="col-md-10 col-form-label">Received Quantity</label>
                <div class="col-md-11">
                    <input type="number" class="form-control" id="itemReceivedQn" placeholder="Enter Received Quantity" name="pmap_inventory[received_quantity]" required>
                </div>
            </div>
        </div>
        <div class="card-footer text-right">
            <button type="submit" class="btn btn-lg btn-success">Submit</button>
            <button type="button" class="btn btn-lg btn-danger mr-2" onMouseDown="hideModal()">Close</button>
        </div>
    </div>
    <%= f.hidden_field :patient_id, :value => @patient.id %>
<% end %>

