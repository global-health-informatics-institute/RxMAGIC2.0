<%= form_for :dispensation, :html => { :class => "form-horizontal dispensation" }, :url => "/refill", method: "POST"  do |f| %>
    <div class="card">
        <h5 class="card-header bg-secondary text-light">Dispense Item (No Rx)</h5>
        <div class="card-body">
            <div class="form-group row">
                <label for="itemName" class="col-md-7 col-form-label">Dispense From (Scan Barcode)</label>
                <div class="col-md-5">
                    <input type="text" class="form-control" name="dispensation[bottle_id]" >
                </div>
            </div>
            <div class="form-group row">
                <label for="itemName" class="col-md-5 col-form-label">Directions</label>
                <div class="col-md-7">
                    <textarea maxlength="175" name="dispensation[directions]" style="resize: none;" placeholder="Enter directions" class ='form-control' required ></textarea>
                </div>
            </div>
            <div class="form-group row">
                <label for="itemName" class="col-md-5 col-form-label">Prescribed By</label>
                <div class="col-md-7">
                    <input id="provider" type="text" autocomplete="off" class="form-control" name="dispensation[provider]">
                </div>
            </div>
            <div class="form-group row">
                <label for="itemName" class="col-md-5 col-form-label">Amount Dispensed</label>
                <div class="col-md-7">
                    <input type="number" class="form-control" id="itemName" name="dispensation[quantity]" placeholder="Enter Amount to Dispense" required>
                </div>
            </div>
        </div>
        <div class="card-footer text-right">
            <div class="form-group row">
                <div class="col-md-4">
                    &nbsp;
                </div>
                <div class="col-md-4">
                    <button type="submit" class="btn btn-lg btn-block btn-success">Dispense</button>
                </div>
                <div class="col-md-4">
                    <button type="button" class="btn btn-lg btn-block btn-danger" onMouseDown="hideModal()">Cancel</button>
                </div>
            </div>
        </div>
    </div>
    <%= f.hidden_field :patient_id, :value => @patient.id %>
<% end %>

