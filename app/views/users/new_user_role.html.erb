
<%= form_for :user, :html => { :class => "form-horizontal general_inventory" }, :url => create_user_role_path  do |f| %>
    <div class="card mt-5">
        <h5 class="card-header bg-secondary text-light">RxMAGIC User Profile</h5>
        <div class="card-body">
            <div class="form-group row">
                <label for="first_name" class="col-md-3 col-form-label">First Name</label>
                <div class="col-md-11">
                    <input type="text" class="form-control" id="first_name" name="user[first_name]" placeholder="Enter First Name" required>
                </div>
            </div>
              <div class="form-group row">
                <label for="last_name" class="col-md-3 col-form-label">Last Name</label>
                <div class="col-md-11">
                    <input type="text" class="form-control" id="last_name" name="user[last_name]" placeholder="Enter Last Name" required>
                </div>
            </div>
            <div class="form-group row">
                <label for="last_name" class="col-md-10 col-form-label">User Role</label>
                <div class="col-md-11">
                    <div class="custom-control custom-radio custom-control-inline">
                        <input type="radio" id='rdRoleAmericorp' name="user[user_role]" value='Americorp Member' class="custom-control-input" required>
                        <label class="custom-control-label" for="rdRoleAmericorp">Americorp Member</label>
                    </div>
                    <div class="custom-control custom-radio custom-control-inline">
                        <input type="radio" id="rdRolePharmacist" name="user[user_role]" value='Pharmacy Staff' class="custom-control-input">
                        <label class="custom-control-label" for="rdRolePharmacist">Pharmacy Staff</label>
                    </div>
                    <div class="custom-control custom-radio custom-control-inline">
                        <input type="radio" id="rdRoleClinician" name="user[user_role]"  value='Clinician'" class="custom-control-input">
                        <label class="custom-control-label" for="rdRoleClinician">Clinician</label>
                    </div>
                </div>
            </div>
        <div class="card-footer text-right">
            <button type="button" class="btn btn-lg btn-danger mr-2" onMouseDown="hideModal()">Close</button>
            <button type="submit" class="btn btn-lg btn-success">Submit</button>
        </div>
    </div>
    <%= f.hidden_field :username, :value => session[:user] %>
<% end %>

