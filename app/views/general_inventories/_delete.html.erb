<%= form_for :general_inventory,:url => "/delete_general_inventory_item/#{@item.gn_identifier}", :method => "POST" do |f| %>
  <div class="card">
        <h5 class="card-header bg-dark text-light">Delete Item from Inventory</h5>
        <div class="card-body">
            <blockquote class="blockquote">
              <p class="mb-0">Select reason for deleting item</p>
            </blockquote>
            <fieldset class="form-group row">  
              <div class="col-sm-10">
                  <div class="form-check">
                      <input class="form-check-input" type="radio" name="general_inventory[void_reason]" id="gridRadios1" value="Medication has expired" required>
                      <label class="form-check-label" for="gridRadios1">Medication has expired</label>
                  </div>
                  <div class="form-check">
                      <input class="form-check-input" type="radio" name="general_inventory[void_reason]" id="gridRadios2" value="Clerical error when entering">
                      <label class="form-check-label" for="gridRadios2">Clerical error made when adding item</label>
                  </div>
                  <div class="form-check disabled">
                      <input class="form-check-input" type="radio" name="general_inventory[void_reason]" id="gridRadios3" value="Other">
                      <label class="form-check-label" for="gridRadios3">Other</label>
                  </div>
              </div>
          </fieldset>
        </div>
        <div class="card-footer text-right">
            <button type="submit" class="btn btn-lg btn-success">Confirm Delete</button>
            <button type="button" class="btn btn-lg btn-danger mr-2" onMouseDown="hideModal()">Close</button>
        </div>
    </div>
    <%= f.hidden_field :voided_by, :value => current_user.id %>
    <%= f.hidden_field :voided, :value => true %>
<% end %>
