

<%= form_for :general_inventory, :html => { :class => "form-horizontal general_inventory" }, :url => "/void_general_inventory"  do |f| %>
  <div class="card">
        <h5 class="card-header bg-dark text-light">Delete Item from Inventory</h5>
        <div class="card-body">
            Select reason for deleting item
            <fieldset class="form-group row">
            <legend class="col-form-label col-sm-2 float-sm-left pt-0">Radios</legend>
                <div class="col-sm-10">
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="gridRadios" id="gridRadios1" value=value="Medication has expired" required checked>
                        <label class="form-check-label" for="gridRadios1">
                        First radio
                        </label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="gridRadios" id="gridRadios2" value="option2">
                        <label class="form-check-label" for="gridRadios2">
                        Second radio
                        </label>
                    </div>
                    <div class="form-check disabled">
                        <input class="form-check-input" type="radio" name="gridRadios" id="gridRadios3" value="option3" disabled>
                        <label class="form-check-label" for="gridRadios3">
                        Third disabled radio
                        </label>
                    </div>
                </div>
            </fieldset>
            <div class="form-group row">
                <label for="itemReceivedQn" class="col-md-10 col-form-label">Received Quantity</label>
                <div class="col-md-11">
                    <input type="number" class="form-control" id="itemReceivedQn" placeholder="Enter Received Quantity">
                </div>
            </div>
        </div>
        <div class="card-footer text-right">
            <button type="button" class="btn btn-lg btn-danger mr-2" onMouseDown="hideModal()">Close</button>
            <button type="submit" class="btn btn-lg btn-success">Confirm Delete</button>
        </div>
    </div>

    
    <div class="form-group" style="margin-bottom: 0px;">
      <div class="control-label col-lg-6" style="text-align: left;padding-top: 2px;margin-left: 25px;">
        <label><input type="radio" name="general_inventory[reason]"  required>Medication has expired</label>
      </div>
      <div class="control-label col-lg-3">
        &nbsp;
      </div>
    </div>
    <div class="form-group" style="margin-bottom: 0px;">
      <div class="control-label col-lg-6" style="text-align: left;padding-top: 2px;margin-left: 25px;">
        <label><input type="radio" name="general_inventory[reason]" value="Clerical error made when adding item" required>Clerical error made when adding item</label>
      </div>
      <div class="control-label col-lg-3">
        &nbsp;
      </div>
    </div>
    <div class="form-group" style="margin-bottom: 0px;">
      <div class="control-label col-lg-6" style="text-align: left;margin-left: 25px;">
        <label><input type="radio" name="general_inventory[reason]" value="Other" required>Other</label>
      </div>
      <div class="control-label col-lg-3">
        &nbsp;
      </div>
    </div>
    <%= f.hidden_field :gn_id %>
    <div class="form-group" style="margin-top: 10px;">
      <div class="col-lg-offset-3 col-lg-5">
        <%= f.submit "Save", :class => 'btn btn-success' %>
        <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
      </div>
    </div>
<% end %>
