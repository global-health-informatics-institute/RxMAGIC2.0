
<%= form_for :new_general_inventory, :html => { :class => "form-horizontal general_inventory" }, :url => "/general_inventories"  do |f| %>
    <div class="card">
        <h5 class="card-header bg-dark text-light">Add New General Inventory Item</h5>
        <div class="card-body">
            <div class="form-group row">
                <label for="itemName" class="col-md-10 col-form-label">Item Name</label>
                <div class="col-md-11">
                    <input type="text" class="form-control" id="itemName" placeholder="Enter Item Name">
                </div>
            </div>
            <div class="form-group row">
                <label for="itemManufacturer" class="col-md-10 col-form-label">Manufacturer</label>
                <div class="col-md-11">
                    <select class="form-control" id="itemManufacturer" placeholder="Enter Item Manufacturer">
                        <% (@mfns || []).each do |mfn| %>
                            <option value="<%= mfn.id %>"><%= mfn.name %></option>
                        <% end %>
                    </select>
                </div>
            </div>
            <div class="form-group row">
                <label for="itemLotNumber" class="col-md-10 col-form-label">Lot Number</label>
                <div class="col-md-11">
                    <input type="text" class="form-control" id="itemLotNumber" placeholder="Enter Item Lot Number">
                </div>
            </div>
            <div class="form-group row">
                <label for="itemExpiryDate" class="col-md-10 col-form-label">Expiry Date</label>
                <div class="col-md-11">
                    <input type="text" class="form-control" id="itemExpiryDate" placeholder="Enter Item Expiry Date">
                </div>
            </div>
            <div class="form-group row">
                <label for="itemReceivedQn" class="col-md-10 col-form-label">Received Quantity</label>
                <div class="col-md-11">
                    <input type="number" class="form-control" id="itemReceivedQn" placeholder="Enter Received Quantity">
                </div>
            </div>
        </div>
        <div class="card-footer text-right">
            <button type="button" class="btn btn-lg btn-danger mr-2" onMouseDown="hideModal()">Close</button>
            <button type="submit" class="btn btn-lg btn-success">Submit</button>
        </div>
    </div>
<% end %>

