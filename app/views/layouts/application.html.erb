<!DOCTYPE html>
<html>
  <head>
    <title>RxMAGIC 2.0</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_pack_tag 'application', 'data-turbolinks-track': 'reload' %>

    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script src=<%= asset_path("jquery-3.6.0.min.js") %> crossorigin="anonymous"></script> 
    <script src=<%= asset_path("bootstrap.js") %> ></script> 
   

  </head>

  <body>
    <nav class="navbar navbar-expand-md bg-dark navbar-dark">
      <div class="col-sm-10 text-right">

        <ul class="navbar-nav">
          <a class="navbar-brand text-secondary" href="/">RxMAGIC 2.0</a>
          <li class="nav-item">
            <a class="nav-link text-white" href="/">Home</a>
          </li>
          <li class="nav-item">
            <a class="nav-link text-white" href="/home/about">About</a>
          </li>
          <li class="nav-item">
            <a class="nav-link text-white" href="/home/faq">FAQ</a>
          </li>
          <li class="nav-item">
            <a class="nav-link text-white" href="/home/contact">Contact Us</a>
          </li>
        </ul>
      </div>
      <div class="col-sm-2 text-right">
        <% if logged_in? %>
          <a class="nav-link text-white" href="/home/about">Logged in as: <%= current_username  %> </a>
        <% end %>
      </div>
    </nav>

    <% if !flash[:errors].blank? || !flash[:success].blank? %>
      <div class="toast mt-3" style="position: absolute; top: 15; right: 50%;">
        <div class="toast-header <%= flash[:success].blank? ? 'bg-danger' : 'bg-success' %> text-white">
            <h6><%= flash[:title]  %></h6>
        </div>
        <div class="toast-body">
            <%= flash[:message] %>
        </div>
      </div>
      
    <% end %>

    <div class="container col-md-10 mt-md-3">
      <%= yield %>
    </div>

    <nav class="navbar navbar-expand-md bg-dark navbar-dark fixed-bottom pt-3">
      <div class="col-sm-8">
        <h4 class="text-secondary">RxMAGIC 2.0 @ <%= facility_name%></h4>
      </div>
      <div class="col-sm-4 text-right">
        <h5 class="text-right text-secondary"><%= DateTime.now.strftime("%A, %B %d, %Y ") %></h5>
      </div>
    </nav>
  </body>

      <script>
        $(document).ready(function() {
            $('.toast').toast({delay: 5000});
            $('.toast').toast('show');
        });
    </script>

</html>
  